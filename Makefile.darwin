# ====================================================================================
# Common functions
# ====================================================================================

EXE_SUFFIX = .exe
RM = rm -f
RMDIR = rm -rf


# Check if file exists
define check_file_exists
	@if [ ! -f $(1) ]; then \
		echo "$(ERROR)  File $(1) not found."; \
		exit 1; \
	fi
endef

# Create directory
define create_dir
	@mkdir -p $(1)
endef

# Clean directory
define clean_dir
	@rm -rf $(1)
endef